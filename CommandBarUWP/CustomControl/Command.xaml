<UserControl
    x:Class="CommandBarUWP.CustomControl.Command"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="Root">

    <Grid>
        <!-- replace Command by Click destroy project <3 -->
        <Button Content="{Binding Text, ElementName=Root}" Command="{Binding ClickCommand, ElementName=Root}" Background="{Binding Path=Background, ElementName=Root}" Click="Button_Click" >

        </Button>
        <ItemsControl ItemsSource="{Binding SubCommands, ElementName=RootMainCommands}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        </Grid>
</UserControl>
