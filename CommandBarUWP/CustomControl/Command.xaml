<UserControl
    x:Class="CommandBarUWP.CustomControl.Command"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    x:Name="Root">

    <Grid>
        <Button 
            Style="{StaticResource CommandButton}"
            Content="{Binding Text, ElementName=Root}"
            Background="{Binding Path=Background, ElementName=Root}" 
            FontSize="{Binding Path=FontSize, ElementName=Root}" 
            FontFamily="{Binding Path=FontFamily, ElementName=Root}" 
            Click="Button_Click" >

        </Button>
    </Grid>
</UserControl>
